<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GlowingText">
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TitleTextStyling" parent="GlowingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="newTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">.1</item>
    </style>

    <style name="smallCapsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="greyText" parent="smallCapsText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="navigationSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="iconSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="recentGames">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="mainButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:backgroundTint">@color/dark_primary</item>
        <item name="strokeColor">@color/cyan</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">.2</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="unselectedSwitchButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="strokeColor">@color/white_80</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">.2</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">45dp</item>
    </style>

    <style name="selectedSwitchButton" parent="@style/unselectedSwitchButton">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="strokeColor">@color/cyan</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/cyan</item>
    </style>

    <style name="gameReviewTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="titleBarStepText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">right|end|bottom</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">center</item>
        <item name="elevation">4dp</item>
        <item name="android:foreground">@drawable/add_icon_solid</item>
        <item name="backgroundTint">#0028E7C4</item>
        <item name="borderWidth">1dp</item>
    </style>

</resources>