<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_red_orange"
    tools:context=".presentation.play.OpponentSelectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topNavigationConstraint"
        style="@style/navigationSection"
        android:background="@color/dark_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_button"
            style="@style/iconSize"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/back_icon"
            android:src="@drawable/back_icon_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back_text"
            style="@style/smallCapsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/settings_button"
            app:layout_constraintStart_toStartOf="@+id/settings_button"
            app:layout_constraintTop_toBottomOf="@+id/settings_button" />

        <TextView
            android:id="@+id/title_text"
            style="@style/newTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/select_opponent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_text" />

        <ImageView
            android:id="@+id/top_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white_80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectedOpponentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNavigationConstraint">

        <!-- USER SECTION -->
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/user_icon_blue"
            android:src="@drawable/user_icon_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_text" />

        <TextView
            android:id="@+id/user_text"
            style="@style/smallCapsText"
            app:layout_constraintEnd_toEndOf="@+id/user_image"
            app:layout_constraintStart_toStartOf="@+id/user_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ryan" />

        <!-- OPPONENT SECTION -->
        <ImageView
            android:id="@+id/opponent_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/profile_icon_red"
            android:src="@drawable/user_icon_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opponent_text"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/opponent_text"
            style="@style/smallCapsText"
            android:text="NA"
            app:layout_constraintEnd_toEndOf="@+id/opponent_image"
            app:layout_constraintStart_toStartOf="@+id/opponent_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kieron" />

        <!-- CENTER SECTION -->
        <TextView
            android:id="@+id/win_record_title"
            style="@style/greyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win record"
            app:layout_constraintEnd_toStartOf="@+id/opponent_image"
            app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintTop_toTopOf="@+id/user_image" />

        <TextView
            android:id="@+id/win_record_text"
            style="@style/TitleTextStyling"
            android:text="0 - 0"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/opponent_image"
            app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintTop_toBottomOf="@+id/win_record_title"
            tools:text="2 - 5" />

        <TextView
            android:id="@+id/last_5_title"
            style="@style/greyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 5 games"
            app:layout_constraintBottom_toBottomOf="@+id/user_image"
            app:layout_constraintEnd_toStartOf="@+id/opponent_image"
            app:layout_constraintStart_toEndOf="@+id/user_image" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/opponentPreviousFiveSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_image">

            <ImageView
                android:id="@+id/result1"
                style="@style/recentGames"
                android:src="@drawable/na_img"
                android:contentDescription="@string/recent_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/result2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/result2"
                style="@style/recentGames"
                android:src="@drawable/na_img"
                android:contentDescription="@string/recent_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/result3"
                app:layout_constraintStart_toEndOf="@+id/result1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/result3"
                style="@style/recentGames"
                android:src="@drawable/na_img"
                android:contentDescription="@string/recent_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/result4"
                app:layout_constraintStart_toEndOf="@+id/result2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/result4"
                style="@style/recentGames"
                android:src="@drawable/na_img"
                android:contentDescription="@string/recent_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/result5"
                app:layout_constraintStart_toEndOf="@+id/result3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/result5"
                style="@style/recentGames"
                android:src="@drawable/na_img"
                android:contentDescription="@string/recent_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/result4"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedOpponentSection"
        tools:ignore="ImageContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextButton"
        style="@style/mainButton"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_white_icon"
        app:tint="@color/white"
        app:backgroundTint="@color/purple"
        app:layout_constraintBottom_toBottomOf="@+id/opponentListRecycler"
        app:layout_constraintEnd_toEndOf="@+id/opponentListRecycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opponentListRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNextButton"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>