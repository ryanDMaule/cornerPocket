<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_blue"
    tools:context=".GameReviewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topNavigationConstraint"
        style="@style/navigationSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_button"
            style="@style/iconSize"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/quit_icon"
            android:src="@drawable/quit_icon_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNavigationConstraint">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/breaksTitle"
                style="@style/TitleTextStyling"
                android:text="@string/game_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- WHO WON SECTION-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/winner_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:padding="16dp"
                android:background="@drawable/gradient_black_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breaksTitle">

                <TextView
                    android:id="@+id/winner_title"
                    style="@style/gameReviewTextTitle"
                    android:text="@string/who_won"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    style="@style/iconSize"
                    android:src="@drawable/info_icon_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/info_icon"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/versusBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <!-- USER SECTION -->
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/user_icon_blue"
                        android:src="@drawable/user_icon_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ImageContrastCheck" />

                    <ImageView
                        android:id="@+id/user_selected_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/green_tick_icon_solid_background"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="@+id/user_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/tick"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/user_text"
                        style="@style/smallCapsText"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/user_image"
                        app:layout_constraintStart_toStartOf="@+id/user_image"
                        app:layout_constraintTop_toBottomOf="@+id/user_image"
                        tools:text="Ryan"/>

                    <!-- OPPONENT SECTION -->
                    <ImageView
                        android:id="@+id/opponent_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/profile_icon_red"
                        android:src="@drawable/user_icon_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ImageContrastCheck" />

                    <ImageView
                        android:id="@+id/opponent_selected_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/green_tick_icon_solid_background"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="@+id/opponent_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/tick"
                        />

                    <TextView
                        android:id="@+id/opponent_text"
                        style="@style/smallCapsText"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/opponent_image"
                        app:layout_constraintStart_toStartOf="@+id/opponent_image"
                        app:layout_constraintTop_toBottomOf="@+id/opponent_image"
                        tools:text="Kieron"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/method_of_victory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/versusBlock"
                    tools:layout_editor_absoluteX="16dp">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- BALLS PLAYED SECTION-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/balls_played_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/gradient_black_orange"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/winner_section">

                <TextView
                    android:id="@+id/balls_played_title"
                    style="@style/gameReviewTextTitle"
                    android:text="@string/balls_played"
                    app:layout_constraintBottom_toBottomOf="@+id/balls_played_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/balls_played_info"
                    style="@style/iconSize"
                    android:src="@drawable/info_icon_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/info_icon"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/colour_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/balls_played_info">

                    <!-- BALL ONE -->
                    <ImageView
                        android:id="@+id/red_ball_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/red_ball_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/red_ball"/>

                    <ImageView
                        android:id="@+id/red_ball_selected_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/green_tick_icon_solid_background"
                        app:layout_constraintEnd_toEndOf="@+id/red_ball_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/tick"
                        android:visibility="invisible"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/red_ball_text"
                        style="@style/smallCapsText"
                        android:text="@string/red"
                        app:layout_constraintEnd_toEndOf="@+id/red_ball_image"
                        app:layout_constraintStart_toStartOf="@+id/red_ball_image"
                        app:layout_constraintTop_toBottomOf="@+id/red_ball_image" />

                    <!-- BALL TWO -->
                    <ImageView
                        android:id="@+id/yellow_ball_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/yellow_ball_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/yellow_ball"/>

                    <ImageView
                        android:id="@+id/yellow_ball_selected_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/green_tick_icon_solid_background"
                        app:layout_constraintEnd_toEndOf="@+id/yellow_ball_image"
                        app:layout_constraintTop_toTopOf="@+id/yellow_ball_image"
                        android:visibility="invisible"
                        android:contentDescription="@string/tick"/>

                    <TextView
                        android:id="@+id/yellow_ball_text"
                        style="@style/smallCapsText"
                        android:text="@string/yellow"
                        app:layout_constraintEnd_toEndOf="@+id/yellow_ball_image"
                        app:layout_constraintStart_toStartOf="@+id/yellow_ball_image"
                        app:layout_constraintTop_toBottomOf="@+id/yellow_ball_image" />

                    <!-- BALLS REMAINING SECTION -->
                    <TextView
                        android:id="@+id/balls_remaining_title"
                        style="@style/gameReviewTextTitle"
                        android:layout_marginTop="8dp"
                        android:text="@string/balls_remaining"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/red_ball_text" />

                    <!-- BALL ONE -->
                    <ImageView
                        android:id="@+id/user_balls_left_image"
                        android:layout_width="120dp"
                        android:layout_height="64dp"
                        android:src="@drawable/rectangle_red"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/red_ball_image"
                        app:layout_constraintStart_toStartOf="@+id/red_ball_image"
                        app:layout_constraintTop_toBottomOf="@+id/balls_remaining_title"
                        android:contentDescription="@string/border"/>

                    <EditText
                        android:id="@+id/editText"
                        style="@style/smallCapsText"
                        android:layout_width="0dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/ellipses"
                        android:textSize="20sp"
                        android:labelFor="@id/balls_remaining_title"
                        android:importantForAutofill="no"
                        app:layout_constraintBottom_toBottomOf="@+id/user_balls_left_image"
                        app:layout_constraintEnd_toEndOf="@+id/user_balls_left_image"
                        app:layout_constraintStart_toStartOf="@+id/user_balls_left_image"
                        app:layout_constraintTop_toTopOf="@+id/user_balls_left_image"
                        tools:text="0"/>

                    <!-- BALL TWO -->
                    <ImageView
                        android:id="@+id/opponent_balls_left_image"
                        android:layout_width="120dp"
                        android:layout_height="64dp"
                        android:src="@drawable/rectangle_yellow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/yellow_ball_image"
                        app:layout_constraintStart_toStartOf="@+id/yellow_ball_image"
                        app:layout_constraintTop_toBottomOf="@+id/balls_remaining_title"
                        android:contentDescription="@string/border"/>

                    <EditText
                        style="@style/smallCapsText"
                        android:layout_width="0dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/ellipses"
                        android:textSize="20sp"
                        android:labelFor="@id/balls_remaining_title"
                        android:importantForAutofill="no"
                        app:layout_constraintBottom_toBottomOf="@+id/opponent_balls_left_image"
                        app:layout_constraintEnd_toEndOf="@+id/opponent_balls_left_image"
                        app:layout_constraintStart_toStartOf="@+id/opponent_balls_left_image"
                        app:layout_constraintTop_toTopOf="@+id/opponent_balls_left_image"
                        tools:text="3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton"
                style="@style/mainButton"
                android:layout_marginTop="48dp"
                android:text="@string/finish_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/balls_played_section" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>